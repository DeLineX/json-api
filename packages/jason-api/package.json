{
  "name": "jason-api",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Consume and manipulate JSON API standard data in Redux with scary ease.",
  "repository": "https://github.com/rmarganti/json-api/tree/master/packages/jason-api",
  "main": "dist/index.js",
  "module": "dist/jason-api.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdx watch",
    "build": "tsdx build && yarn docs:build",
    "test": "tsdx test --env=jsdom",
    "lint": "tsdx lint",
    "prepublish": "yarn build",
    "docs:dev": "docz dev",
    "docs:build": "docz build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src && yarn test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^__mocks__(/?.*)": "<rootDir>/__mocks__/$1",
      "^__tests__(/?.*)": "<rootDir>/__tests__/$1"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "pluralize": "^8.0.0",
    "ramda": "^0.26.1",
    "ts-json-api": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-redux": ">=7.1.0",
    "redux": ">=4.0.0"
  }
}
